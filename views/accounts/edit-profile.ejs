<% layout('boilerplate') -%>
<div class="row signup-form">
  
  <% if(message.length > 0) { %>
    <script>
      Materialize.toast("<%= message %>", 2000);
    </script>
  <% } %>

  <h3>Edit Profile</h3>

  <form class="col s12 m6 offset-m3" method='post'>  
    <div class="row">
      <div class="input-field col s12">
        <input id="name" type="text" class="validate" name="name" value="<%= user.profile.name %>">
        <label for="name">Name</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input id="address" type="text" class="validate" name="address" value="<%= user.address %>">
        <label for="address">Address</label>
      </div>
    </div>

    <div class="row signup-submit-button">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>